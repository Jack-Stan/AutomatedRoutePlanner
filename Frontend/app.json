{
  "expo": {
    "name": "Hoppy Route Manager",
    "slug": "hoppy-route-manager",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#39C5A3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.hoppy.routemanager"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#39C5A3"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.hoppy.routemanager"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
